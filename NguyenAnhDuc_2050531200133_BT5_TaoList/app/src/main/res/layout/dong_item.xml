<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F1EFEF"
    android:layout_width="match_parent"
    android:layout_height="120dp">
    <ImageView
        android:id="@+id/ivHinh"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp" />
    <TextView
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:layout_toRightOf="@id/ivHinh"
        android:id="@+id/tvTen"
        android:text="Tên"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:layout_below="@id/tvTen"
        android:layout_toRightOf="@id/ivHinh"
        android:id="@+id/tvMota"
        android:text="Mô tả"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:paddingTop="5dp"
            android:id="@+id/bttang"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/shape_botron"
            android:text="+"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="SpeakableTextPresentCheck" />
        <Button
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            android:text="-"
            android:background="@drawable/shape_botron"
            android:id="@+id/btgiam"
            android:layout_width="45dp"
            android:layout_height="45dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </RelativeLayout>
    <TextView
        android:layout_toLeftOf="@id/tvtien"
        android:layout_alignParentBottom="true"
        android:id="@+id/tvMoney"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="6"
        android:paddingBottom="10dp"
        android:textColor="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvtien"
        android:layout_marginRight="80dp"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="$"
        android:textColor="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>