<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/a"
            android:textStyle="bold"
            android:textColor="@color/startblue"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text="Thông tin chi tiết"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="50dp"
            android:layout_below="@+id/a"
            android:layout_centerHorizontal="true"
            android:id="@+id/ivHinh"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="15dp" />
        <TextView
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:layout_below="@id/ivHinh"
            android:id="@+id/tvTen"
            android:text="Tên"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:textColor="@color/gray"
            android:layout_marginTop="0dp"
            android:textSize="20sp"
            android:layout_below="@id/tvTen"
            android:id="@+id/tvMota"
            android:text="Mô tả"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_toLeftOf="@id/tvGiatien"
            android:id="@+id/textgia"
            android:textSize="25sp"
            android:text="Giá:"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/tvMota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/tvGiatien"
            android:textSize="25sp"
            android:text="6"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/tvMota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="25sp"
            android:text="$"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/tvMota"
            android:layout_toRightOf="@id/tvGiatien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/btBack"
            android:background="@drawable/buttonstyle"
            android:layout_margin="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/baseline_arrow_back_white_36dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
    </RelativeLayout>
</RelativeLayout>